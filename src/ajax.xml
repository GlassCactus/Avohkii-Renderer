<xml>
  <scene>
    <environment value="1.0" texture="xmas.png"/>
    
    <!-- Objects -->
    <object name="box">
      <translate x="0" y="0" z="12"/>
      <object type="plane" name="WallTop" material="wall">
        <scale value="1024"/>
        <translate z="60"/>
      </object>
      <object type="plane" name="WallBottom" material="wall">
        <scale value="1024"/>
        <translate z="-60"/>
      </object>
      <object type="plane" name="WallBack" material="wall">
        <scale value="1024"/>
        <rotate angle="90" x="1"/>
        <translate y="50"/>
      </object>
      <object type="plane" name="WallLeft" material="wall">
        <scale value="128"/>
        <rotate angle="90" y="1"/>
        <translate x="-75"/>
      </object>
      <object type="plane" name="WallRight" material="wall">
        <scale value="128"/>
        <rotate angle="-90" y="1"/>
        <translate x="75"/>
      </object>
    </object>
    <object type="obj" name="adamfar.obj" material="glass">
      <scale value="11.0"/>
      <rotate angle="80" x="1"/>
      <rotate angle="10" y="1"/>
      <rotate angle="110" z="1"/>
      <translate x="-22" y="0" z="0"/>
    </object>
    <object type="obj" name="CemBody.obj" material="yellowGlass">
      <scale value="2.5"/>
      <rotate angle="-20" x="1"/>
      <rotate angle="-30" y="1"/>
      <rotate angle="180" z="1"/>
      <translate x="-1.5" y="8.0" z="12.5"/>
    </object>
    <object type="sphere" name="ball" material="whiteGlass">
      <scale value="3"/>
      <rotate angle="-20" x="1"/>
      <rotate angle="-30" y="1"/>
      <rotate angle="0" z="1"/>
      <translate x="0.5" y="17.5" z="16.25"/>
    </object>
    <object type="sphere" name="ball" material="whiteGlass">
      <scale value="3"/>
      <translate x="45" y="20.0" z="20"/>
    </object>
    <object type="sphere" name="ball" material="whiteGlass">
      <scale value="3"/>
      <translate x="-40" y="0.0" z="8"/>
    </object>

    <object type="sphere" name="env" material="env">
      <scale value="-50000"/>
      <rotate angle="0" x="1"/>
      <rotate angle="0" y="1"/>
      <rotate angle="0" z="1"/>
      <translate x="0" y="0" z="0"/>
    </object>

    <!-- Materials -->
    <material type="blinn" name="yellowGlass">
      <diffuse  r="0.9" g="0.65" b="0.025"/>
      <specular r="0.0" g="0.0" b="0.0" value="0.65"/>
      <glossiness value="8192"/>
      <refraction value="0.95" index="1.45"/>

    </material>
    <material type="blinn" name="whiteGlass">
      <diffuse  r="0.8" g="0.5" b="0.525"/>
      <specular r="0.0" g="0.0" b="0.0" value="0.65"/>
      <glossiness value="8192"/>
      <refraction value="0.95" index="1.35"/>
      <emission r="0.8" g="0.8" b="0.8" value="25.0"/>
    </material>
    
    <material type="blinn" name="glass">
      <diffuse  r="0.0" g="0.0125" b="0.0025"/>
      <specular r="1.0" g="1.0" b="1.0" value="0.65"/>
      <glossiness value="4096"/>
      <refraction value="0.95" index="2.00"/>
      <absorption r="0.00001" g="1.0" b="0.0001"/>
    </material>
    <material type="blinn" name="chess">
      <diffuse texture="checkerboard">
        <color1 r="1.0" g="1.0" b="0.9" />
        <color2 r="0.23" g="0.10" b="0.02" />
        <scale x="0.005" y="0.005"/>
      </diffuse>
      <specular value="0.8"/>
      <glossiness value="100" texture="checkerboard">
        <color1 value="1.0" />
        <color2 value="1.0" />
        <scale x="0.005" y="0.005"/>
      </glossiness>
      <reflection value="0.5"/>
    </material>

    <material type="blinn" name="env">
      <diffuse texture="xmas.png">
      </diffuse>
      <specular value="0.0"/>
      <glossiness value="10"/>
    </material>
    
    <!-- Lights -->
  </scene>
  
  <camera gamma="sRGB">
    <position x="0" y="-60" z="12"/>
    <target x="0.0" y="7.5" z="15.75"/>
    <up x="0" y="0" z="1"/>
    <fov value="30"/>
    <width value="1920"/>
    <height value="1080"/>
  </camera>
</xml>